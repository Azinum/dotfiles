# .xprofile

export PATH="$HOME/.local/bin:$PATH"

# Enable transparent windows
xcompmgr 2> /dev/null &

# Set desktop wallpaper
feh --bg-fill ~/Pictures/Wallpapers/Landscapes/1426033016725.jpg 2> /dev/null

# Set key repeat speed
xset r rate 220 50

# Set razer profile
razercfg -r 0:1 > /dev/null

# Status bar configuration
killall dwmbar 2> /dev/null
dwmbar &

# Keybindings
killall sxhkd 2> /dev/null
sxhkd &
