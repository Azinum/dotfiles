# .xprofile

export PATH="$HOME/.local/bin:$PATH"

# Enable transparent windows
xcompmgr 2> /dev/null &

# Screen resolution
# xrandr --size 1440x900
xrandr --size 1920x1080

# Set desktop wallpaper
feh --bg-fill ~/Pictures/wall.png 2> /dev/null &

# Set key repeat speed
xset r rate 220 50

# Set the mouse pointer speed
xset m 1 0

# Set razer profile
razercfg -r 0:1 2> /dev/null

# In case we are using a trackpad
# trackpad-cfg 2> /dev/null

# Status bar configuration
killall dwmbar 2> /dev/null
dwmbar &

# Keybindings
killall sxhkd 2> /dev/null
sxhkd &
